{
  "name": "backend",
  "version": "1.1.7",
  "description": "Model Context Protocol server for DrawDB - enables AI assistants to create and modify database diagrams via WebSocket",
  "author": "Anatoly Tarnavsky",
  "private": true,
  "license": "AGPL-3.0",
  "main": "dist/main-http.js",
  "bin": {
    "drawdb-mcp": "bin/drawdb-mcp.js"
  },
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch --entryFile main-http",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev:stdio": "nest start --watch --entryFile main-stdio",
    "start:dev:http": "nest start --watch --entryFile main-http",
    "start:debug:stdio": "nest start --debug --watch --entryFile main-stdio",
    "start:debug:http": "nest start --debug --watch --entryFile main-http",
    "start:prod:stdio": "node dist/main-stdio",
    "start:prod:http": "node dist/main-http",
    "lint": "eslint \"{src}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "inspector:stdio": "./node_modules/.bin/mcp-inspector --config mcp-inspector-config.json --server stdio-server",
    "inspector:stdio:debug": "./node_modules/.bin/mcp-inspector --config mcp-inspector-config.json --server stdio-server-debug",
    "inspector:http": "./node_modules/.bin/mcp-inspector --config mcp-inspector-config.json --server http-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-ws": "^11.1.6",
    "@nestjs/websockets": "^11.1.6",
    "@rekog/mcp-nest": "^1.8.3",
    "commander": "^14.0.1",
    "nanoid": "^5.0.9",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@modelcontextprotocol/inspector": "^0.17.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "@types/ws": "^8.5.13",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anatoly314/drawdb-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "drawdb",
    "database-design",
    "erd",
    "entity-relationship-diagram",
    "ai",
    "claude",
    "websocket"
  ],
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}
